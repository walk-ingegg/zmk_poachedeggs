#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ---------------------------------------------------------------------------------------------------------------
            // | TAB   | Q      | W      | E      | R      | T      | Y      |                 | U      | I      | O      | P      | -      |
            // | CTRL  | A      | S      | D      | F      | G      | H      |                 | J      | K      | L      | ;      | '      |
            // | SHIFT | Z      | X      | C      | V      | B      | N      |                 | M      | ,      | .      | /      | SHIFT  |
            // |       |        |        | GUI    | ALT    | LOWER  | SPACE  | ENTER  | RAISE  | BSPC   | GUI    |        |        | .      |

            bindings = <
                &kp TAB     &kp Q       &kp W       &kp E       &kp R       &kp T                                &kp Y       &kp U        &kp I       &kp O       &kp P        &kp MINUS
                &kp LCTRL   &kp A       &kp S       &kp D       &kp F       &kp G                                &kp H       &kp J        &kp K       &kp L       &kp SEMI     &kp SQT
                &kp LSHFT   &kp Z       &kp X       &kp C       &kp V       &kp B                                &kp N       &kp M        &kp COMMA   &kp DOT     &kp FSLH     &kp RSHFT
                &trans      &trans      &trans      &kp LGUI    &kp LALT    &mo 1       &kp SPACE    &kp RET     &mo 2       &kp BSPC     &kp RGUI    &trans      &trans       &trans
            >;
        };

        lower_layer {
            // ---------------------------------------------------------------------------------------------------------------
            // | ESC    | 1      | 2      | 3      | 4      | 5      |                 | 6      | 7      | 8      | 9      | 0      | `      |
            // | `      | !      | @      | #      | $      | %      |                 | ^      | &      | *      | (      | )      | ~      |
            // | ENTER  |        |        |        |        |        |                 | +      | _      | =      | {      | }      | "|"    |
            // |        |        |        |        |        |        | DEL    |        | BT     |        |        |        |        |        |

            bindings = <
                &kp ESC     &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6      &kp N7      &kp N8      &kp N9      &kp N0      &kp GRAVE
                &kp GRAVE   &kp EXCL    &kp AT      &kp HASH    &kp DOLLAR  &kp PRCNT                           &kp CARET   &kp AMPS    &kp ASTRK   &kp LPAR    &kp RPAR    &kp TILDE
                &kp RET     &trans      &trans      &trans      &trans      &trans                              &trans      &trans      &trans      &kp PLUS    &kp MINUS   &kp PIPE
                &trans      &trans      &trans      &trans      &trans      &trans      &kp DEL     &trans      &mo 3       &trans      &trans      &trans      &trans      &trans
            >;
        };

        raise_layer {
            // ---------------------------------------------------------------------------------------------------------------
            // | F1     | F2     | F3     | F4     | F5     | F6     |                 | F7     | F8     | F9     | F10    | F11    | F12    |
            // |        |        |        |        |        |        |                 |        | <-     | v      | ^      | ->     |        |
            // |        |        |        |        |        |        |                 | +      | -      | =      | [      | ]      | \      |
            // |        |        |        |        |        | BT     |        | DEL    |        |        |        |        |        |        |

            bindings = <
                &kp F1      &kp F2      &kp F3      &kp F4      &kp F5      &kp F6                              &kp F7      &kp F8      &kp F9      &kp F10     &kp F11     &kp F12
                &trans      &trans      &trans      &trans      &trans      &trans                              &trans      &kp LEFT    &kp DOWN    &kp UP      &kp RIGHT   &trans
                &trans      &trans      &trans      &trans      &trans      &trans                              &kp PLUS    &kp MINUS   &kp EQUAL   &kp LBKT    &kp RBKT    &kp BSLH
                &trans      &trans      &trans      &trans      &trans      &mo 3       &trans      &kp DEL     &trans      &trans      &trans      &trans      &trans      &trans
            >;
        };

        bt_layer {
            // ---------------------------------------------------------------------------------------------------------------
            // | BTCLR  | BT1    | BT2    | BT3    | BT4    | BT5    |                 |        |        |        |        |        |        |
            // |        |        |        |        |        |        |                 |        |        |        |        |        |        |
            // |        |        |        |        |        |        |                 |        |        |        |        |        |        |
            // |        |        |        |        |        |        |        |        |        |        |        |        |        |        |

            bindings = <
                &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4                         &trans      &trans      &trans      &trans      &trans      &trans
                &trans      &trans       &trans       &trans       &trans       &trans                               &trans      &trans      &trans      &trans      &trans      &trans
                &trans      &trans       &trans       &trans       &trans       &trans                               &trans      &trans      &trans      &trans      &trans      &trans
                &trans      &trans       &trans       &trans       &trans       &trans       &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans
            >;
        };
    };
};